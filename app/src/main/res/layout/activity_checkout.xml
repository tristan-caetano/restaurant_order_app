<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkoutActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/netRecyclerView"
        android:layout_width="370dp"
        android:layout_height="181dp"
        app:layout_constraintBottom_toTopOf="@+id/tip15Check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="361dp"
        android:layout_height="62dp"
        android:gravity="center|left"
        android:text="Your Summary"
        android:textColor="#8F8686"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/netRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prevCToolbar" />

    <CheckBox
        android:id="@+id/tip15Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15% Tip"
        app:layout_constraintBottom_toTopOf="@+id/tip20Check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/netRecyclerView" />

    <CheckBox
        android:id="@+id/tip20Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20% Tip"
        app:layout_constraintBottom_toTopOf="@+id/tipEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip15Check" />

    <EditText
        android:id="@+id/tipEdit"
        android:layout_width="357dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/finalSummaryView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip20Check" />

    <TextView
        android:id="@+id/finalSummaryView"
        android:layout_width="354dp"
        android:layout_height="89dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/checkoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipEdit" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/prevCToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/checkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/finalSummaryView" />

</androidx.constraintlayout.widget.ConstraintLayout>