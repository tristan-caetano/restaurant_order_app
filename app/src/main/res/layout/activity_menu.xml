<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="361dp"
        android:layout_height="123dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Welcome to the Wing Bar Restaurant"
        android:textColor="#FA0000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="187dp"
        android:layout_height="55dp"
        android:text="Menu"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="140dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/bbqPlus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/bbq" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="140dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/buffPlus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/buffalo" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:text="Plain Wings ($9.99)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="BBQ Wings ($15.99)"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="140dp"
        android:layout_height="119dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/plainPlus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/plain" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="159dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:text="Buffalo Wings ($12.99)"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/bbqPlus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:backgroundTint="#216305"
        android:gravity="center|fill_vertical"
        android:textSize="14sp"
        app:icon="@drawable/add"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buffPlus"
        app:layout_constraintEnd_toStartOf="@+id/bbqEdit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/bbqEdit"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/buffEdit"
        app:layout_constraintEnd_toStartOf="@+id/bbqMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bbqPlus"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/plainMinus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:backgroundTint="#A50505"
        android:gravity="bottom|center"
        android:lineSpacingExtra="0sp"
        android:text=""
        android:textAlignment="center"
        android:textSize="1sp"
        app:icon="@drawable/subtract"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="30sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plainEdit"
        app:layout_constraintTop_toBottomOf="@+id/buffMinus"
        tools:text="-" />

    <EditText
        android:id="@+id/plainEdit"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plainMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plainPlus"
        app:layout_constraintTop_toBottomOf="@+id/buffEdit" />

    <Button
        android:id="@+id/plainPlus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:backgroundTint="#216305"
        android:gravity="center|fill_vertical"
        android:textSize="14sp"
        app:icon="@drawable/add"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plainEdit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/buffPlus" />

    <Button
        android:id="@+id/buffMinus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:backgroundTint="#A50505"
        android:gravity="bottom|center"
        android:lineSpacingExtra="0sp"
        android:text=""
        android:textAlignment="center"
        android:textSize="1sp"
        app:icon="@drawable/subtract"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="30sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/plainMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buffEdit"
        app:layout_constraintTop_toBottomOf="@+id/bbqMinus"
        tools:text="-" />

    <EditText
        android:id="@+id/buffEdit"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/plainEdit"
        app:layout_constraintEnd_toStartOf="@+id/buffMinus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buffPlus"
        app:layout_constraintTop_toBottomOf="@+id/bbqEdit" />

    <Button
        android:id="@+id/buffPlus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:backgroundTint="#216305"
        android:gravity="center|fill_vertical"
        android:textSize="14sp"
        app:icon="@drawable/add"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/plainPlus"
        app:layout_constraintEnd_toStartOf="@+id/buffEdit"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/bbqPlus" />

    <Button
        android:id="@+id/bbqMinus"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:backgroundTint="#A50505"
        android:gravity="bottom|center"
        android:lineSpacingExtra="0sp"
        android:text=""
        android:textAlignment="center"
        android:textSize="1sp"
        app:icon="@drawable/subtract"
        app:iconGravity="textTop"
        app:iconPadding="0dp"
        app:iconSize="30sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/buffMinus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bbqEdit"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="-" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingCheckout"
        android:layout_width="63dp"
        android:layout_height="65dp"
        android:clickable="true"
        android:scaleType="centerInside"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/plainMinus"
        app:layout_constraintVertical_bias="0.709"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/cart" />

</androidx.constraintlayout.widget.ConstraintLayout>