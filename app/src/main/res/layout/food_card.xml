<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="413dp"
        android:layout_height="181dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foodImage"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="2dp"
                app:srcCompat="@drawable/bbq" />

            <TextView
                android:id="@+id/foodText"
                android:layout_width="216dp"
                android:layout_height="96dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="178dp"
                android:layout_marginEnd="-221dp"
                android:layout_marginBottom="63dp"
                android:layout_toStartOf="@+id/plusButton"
                tools:layout_editor_absoluteX="48dp"
                tools:layout_editor_absoluteY="173dp" />

            <EditText
                android:id="@+id/editNum"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="6dp"
                android:layout_toStartOf="@+id/minusButton"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/plusButton"
                android:layout_width="66dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="7dp"
                android:layout_toStartOf="@+id/editNum"
                android:backgroundTint="#216305"
                android:gravity="center|fill_vertical"
                android:textSize="14sp"
                app:icon="@drawable/add"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="30sp"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="98dp" />

            <Button
                android:id="@+id/minusButton"
                android:layout_width="66dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#A50505"
                android:gravity="bottom|center"
                android:lineSpacingExtra="0sp"
                android:text=""
                android:textAlignment="center"
                android:textSize="1sp"
                app:icon="@drawable/subtract"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="30sp"
                app:iconTint="#FFFFFF"
                tools:layout_editor_absoluteX="342dp"
                tools:layout_editor_absoluteY="98dp"
                tools:text="-" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>